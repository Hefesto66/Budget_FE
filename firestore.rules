rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper function to check for superuser or owner
    function isSuperUserOrOwner(companyId) {
      return request.auth.token.superuser == true || request.auth.uid == companyId;
    }

    // Allow logged-in users to manage their own "company" document.
    match /companies/{userId} {
      allow read, update: if request.auth.uid == userId || request.auth.token.superuser == true;
      allow create: if request.auth.uid == userId;
    }
    
    match /clients/{docId} {
      allow read, write: if isSuperUserOrOwner(resource.data.companyId);
      allow create: if isSuperUserOrOwner(request.resource.data.companyId);
    }

    match /inventory/{docId} {
      allow read, write: if isSuperUserOrOwner(resource.data.companyId);
      allow create: if isSuperUserOrOwner(request.resource.data.companyId);
    }

    match /leads/{docId} {
      allow read, write: if isSuperUserOrOwner(resource.data.companyId);
      allow create: if isSuperUserOrOwner(request.resource.data.companyId);
    }
    
    match /quotes/{docId} {
      allow read, write: if isSuperUserOrOwner(resource.data.companyId);
      allow create: if isSuperUserOrOwner(request.resource.data.companyId);
    }
  }
}
