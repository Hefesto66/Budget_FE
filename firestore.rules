
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(companyId) {
      return request.auth.uid == companyId;
    }

    // Companies: Users can only read/write their own company document
    match /companies/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Data collections (inventory, clients, etc.)
    // A user can only access documents that belong to their companyId.
    match /{collection}/{docId} {
      allow read, write: if request.auth.uid != null && isOwner(resource.data.companyId);
      allow create: if request.auth.uid != null && isOwner(request.resource.data.companyId);
    }

    // Special case for quotes subcollection (if it were still in use)
    // To allow reads, we would need to check the parent document's companyId
    // match /quotes/{quoteId}/{subcollection}/{itemDocId} {
    //   allow read, write: if request.auth.uid != null && isOwner(get(/databases/$(database)/documents/quotes/$(quoteId)).data.companyId);
    // }
  }
}
