
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Regra para a coleção 'companies'
    // Permite que um utilizador leia e escreva no seu PRÓPRIO registo de empresa,
    // o que é essencial para ele atualizar os seus dados e para a função de Super Usuário funcionar.
    match /companies/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Regra genérica para as outras coleções
    // Permite a leitura ou escrita se:
    // 1. O 'uid' do utilizador autenticado for igual ao campo 'companyId' do documento (é o dono).
    // 2. OU o utilizador tiver a custom claim 'superuser' definida como true.
    match /{collection}/{docId} {
      allow read, write: if request.auth.uid == resource.data.companyId 
                         || request.auth.token.superuser == true;
    }
  }
}
