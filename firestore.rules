rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership
    function isOwner(companyId) {
      return request.auth.uid == companyId;
    }
    
    // Helper function to check for superuser role
    function isSuperUser() {
      return request.auth.token.superuser == true;
    }

    match /companies/{userId} {
       // Only the owner of the company document or a superuser can read/write it.
       allow read, write: if isOwner(userId) || isSuperUser();
    }
    
    match /clients/{clientId} {
      // Allow creation if the new document's companyId matches the user's UID.
      allow create: if isOwner(request.resource.data.companyId) || isSuperUser();
      // Allow read, update, delete if the existing document's companyId matches the user's UID.
      allow read, update, delete: if isOwner(resource.data.companyId) || isSuperUser();
    }
    
    match /inventory/{productId} {
      allow create: if isOwner(request.resource.data.companyId) || isSuperUser();
      allow read, update, delete: if isOwner(resource.data.companyId) || isSuperUser();
    }

    match /leads/{leadId} {
      allow create: if isOwner(request.resource.data.companyId) || isSuperUser();
      allow read, update, delete: if isOwner(resource.data.companyId) || isSuperUser();
    }

    match /quotes/{quoteId} {
      allow create: if isOwner(request.resource.data.companyId) || isSuperUser();
      allow read, update, delete: if isOwner(resource.data.companyId) || isSuperUser();
    }
  }
}
